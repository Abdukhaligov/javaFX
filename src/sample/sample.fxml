<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller" xmlns:fx="https://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <TextField GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id="name" onKeyPressed="#handleKeyReleased" />

    <Button fx:id="helloButton" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Say hello" onAction="#onButtonClicked" />

    <Button fx:id="byeButton" text="Say Bye" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onButtonClicked" />

    <CheckBox fx:id="checkboxClearing" text="Clear the field after saying hello or bye" GridPane.rowIndex="2" GridPane.columnSpan="2"
        onAction="#handleChange" selected="true"
    />

</GridPane>
