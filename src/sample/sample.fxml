<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller" xmlns:fx="https://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <Slider minWidth="500" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="10" min="0" max="100"
        showTickLabels="true" showTickMarks="true" minorTickCount="2" snapToTicks="true"
    />

    <Spinner GridPane.rowIndex="1" GridPane.columnIndex="1" min="0" max="100"  editable="true" initialValue="50" />

    <ColorPicker GridPane.rowIndex="2" GridPane.columnIndex="0" />

    <DatePicker GridPane.rowIndex="3" GridPane.columnIndex="0" />

</GridPane>
